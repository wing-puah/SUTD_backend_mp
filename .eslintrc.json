{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "space-before-function-paren": "off",
    "comma-dangle": ["error", "none"]
  }
}
